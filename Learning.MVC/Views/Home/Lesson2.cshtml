<script type="text/javascript">
    $(document).ready(function () {
        var displays = $("div.display");
        $("a").click(function (event) {
            var id = $(this).attr('id');
            var index = parseInt(id.substring(1, 2));
            displays.hide();
            $(displays[index]).show();
            return false;
        });
    });
</script>

